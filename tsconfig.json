{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "module": "Node16",
        "target": "ESNext",
        "lib": ["ESNext"],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "alwaysStrict": true,
        "pretty": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
}
